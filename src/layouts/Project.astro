---
import "../styles/global.css";
import Header from "@components/Header.astro";
import PostContent from "./components/PostContent.astro";
import RelatedBlogs from "./components/RelatedBlogs.astro";
import ProjectHeader from "./components/ProjectHeader.astro";
const details = Astro.props.project.data;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- Katex -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
      integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <Header />
    <main class="flex flex-col items-center h-full py-10">
      <div class="w-3/4 mt-20">
        <ProjectHeader github={details.github} title={details.title} />
        <PostContent>
          <slot />
        </PostContent>
        <div class="inline-flex items-center justify-center w-full mt-15 mb-5">
          <hr class="w-full h-px" />
          <span
            class="absolute px-3 font-medium -translate-x-1/2 left-1/2 bg-night"
          >
            <p class="text-lg font-bold">Related Blogs</p>
          </span>
        </div>
        <RelatedBlogs id={details.id} />
      </div>
    </main>
  </body>
</html>
