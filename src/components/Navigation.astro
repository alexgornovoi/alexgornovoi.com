---
const links = [
  ["About", "/about"],
  ["Projects", "/projects"],
  ["Blog", "/blog"],
];
const currentRoute = Astro.url.pathname;
---

<div>
  {
    links.map((link) => (
      <button class="m-1.5">
        <a
          href={link[1]}
          class={`relative before:absolute before:-bottom-[4px] before:w-0 before:h-[2px] before:bg-off-white before:transition-all before:duration-200 before:ease-in-out hover:before:w-full hover:before:left-0 ${currentRoute === link[1] ? " before:w-full before:left-0" : "before:left-1/2"}`}
        >
          {link[0]}
        </a>
      </button>
    ))
  }
</div>
